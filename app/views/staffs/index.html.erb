<div>
  <section class="table-responsive w-100">
    <h1>Staff Records</h1>
    <h4><%= link_to "New record", new_staff_path %></h4>
    <br>

    <table class="table table-bordered table-hover">
      <thead class="table-secondary">
        <tr>
          <th scope="col">S/N</th>
          <th scope="col">Title</th>
          <th scope="col">Surname</th>
          <th scope="col">Other names</th>
          <th scope="col">Email</th>
          <th scope="col">Phone no</th>
          <th scope="col">Address</th>
          <th scope="col">File number</th>
          <th scope="col">Department</th>
          <th scope="col">Status of Staff</th>
          <th scope="col">Status of Appointment</th>
          <th scope="col">Qualifications with dates</th>
          <th scope="col">Gender</th>
          <th scope="col">State</th>
          <th scope="col">Local Government Area (LGA)</th>
          <th scope="col">Designation</th>
          <th scope="col">Professional qualifications</th>
          <th scope="col">Conpcass</th>
          <th scope="col">Date of birth</th>
          <th scope="col">Date of first appointment</th>
          <th scope="col">Date of present appointment</th>
          <th scope="col">Date of Confirmation</th>
          <th scope="col">Remarks</th>
          <th scope="col">Action</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @staffs.each do |staff| %>
          <%= link_to staff_path(staff) do %>
            <tr>
              <td><%= staff.id %></td>
              <td><%= staff.title.capitalize %></td>
              <td><%= staff.surname.capitalize %></td>
              <td><%= staff.other_names.capitalize %></td>
              <td><%= staff.email %></td>
              <td><%= staff.phone_number %></td>
              <td><%= staff.permanent_address %></td>
              <td><%= staff.file_no %></td>
              <td><%= staff.department %></td>
              <td><%= staff.staff_status %></td>
              <td><%= staff.status_of_app %></td>
              <td>
                <% staff.qualifications.each do |q| %>
                  <%= link_to q.name.upcase, "#", class: "badge", style: "color: #212529; font-weight:normal; text-decoration:none" %>
                <% end %>
              </td>
              <td><%= staff.sex.capitalize %></td>
              <td><%= staff.state %></td>
              <td><%= staff.lga %></td>
              <td><%= staff.designation %></td>
              <td><%= simple_format(staff.prof_qualifications) %></td>
              <td><%= staff.conpcass %></td>
              <td><%= staff.dob %></td>
              <td><%= staff.dofa %></td>
              <td><%= staff.dopa %></td>
              <td><%= staff.date_of_confirmation %></td>
              <td><%= staff.remarks %></td>
              <td><%= link_to "View", staff %> 
              <%= link_to "Edit", edit_staff_path(staff) %></td>
              <td><%= link_to 'Delete', staff_path(staff), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
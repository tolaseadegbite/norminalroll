<div class="container my-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><%= link_to "Staffs records", staffs_path, class: "breadcrumb-item" %></li>
            <li class="breadcrumb-item active" aria-current="page"><%= @staff.surname %> (ID: <%= @staff.id %>)</li>
        </ol>
    </nav>

    <p><small><b>Record created on:</b> <i><%= @staff.created_at %></i> | <b>Last updated on:</b> <i><%= @staff.updated_at %></i></small></p>

    <p>
        <%= link_to "Edit", edit_staff_path(@staff) %> |
        <%= link_to "Delete", staff_path(@staff), class: "text-danger" %>
        <h1 class="text-center"><%= @staff.title %> <%= @staff.surname %>'s record</h1>
    </p>
    <br>
    
    <table class="table table-bordered">
        <thead class="table-secondary">
            <tr>
            <th scope="col">Attributes</th>
            <th scope="col">Values</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
            <tr>
                <td><b>Title</b></td>
                <td><%= @staff.title %></td>
            </tr>
            <tr>
                <td><b>Surname</b></td>
                <td><%= @staff.surname %></td>
            </tr>
            <tr>
                <td><b>Other names</b></td>
                <td><%= @staff.other_names %></td>
            </tr>
            <tr>
                <td><b>Sex</b></td>
                <% if @staff.sex = 0 %>
                    <td>Female</td>                  
                <% else %>
                    <td>Male</td>                  
                <% end %>
            </tr>
            <tr>
                <td><b>State</b></td>
                <td><%= @staff.state %></td>
            </tr>
            <tr>
                <td><b>LGA</b></td>
                <td><%= @staff.lga %></td>
            </tr>
            <tr>
                <td><b>Designation</b></td>
                <td><%= @staff.designation %></td>
            </tr>
            <tr>
                <td><b>Qualifications with dates</b></td>
                <td><%= simple_format(@staff.qwd) %></td>
            </tr>
            <tr>
                <td><b>Professional Qualifications</b></td>
                <td><%= simple_format(@staff.prof_qualifications) %></td>
            </tr>
            <tr>
                <td><b>Conpcass</b></td>
                <td><%= @staff.conpcass %></td>
            </tr>
            <tr>
                <td><b>Date of birth</b></td>
                <td><%= @staff.dob %></td>
            </tr>
            <tr>
                <td><b>Date of first appointment</b></td>
                <td><%= @staff.dofa %></td>
            </tr>
            <tr>
                <td><b>Date of present appointment</b></td>
                <td><%= @staff.dopa %></td>
            </tr>
            <tr>
                <td><b>Status of application</b></td>
                <% if @staff.status_of_app = 0 %>
                    <td>Female</td>                  
                <% else %>
                    <td>Male</td>                  
                <% end %>
            </tr>
            </tr>
            <tr>
                <td><b>File number</b></td>
                <td><%= @staff.file_no %></td>
            </tr>
            <tr>
                <td><b>Remarks</b></td>
                <td><%= @staff.remarks %></td>
            </tr>
    </table>
    <div class="text-center">
        <%= link_to "Back", :back, class: "btn btn-small btn-primary" %>
    </div>
</div>
